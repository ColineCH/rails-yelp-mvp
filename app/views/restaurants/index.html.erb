<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-2">
      <h1 class= "text-center">List of restaurants</h1>
      <h4 class= "text-center"><%= link_to "Add a new restaurant", new_restaurant_path %></h4>
      <ul>
      <% @restaurants.each do |restaurant| %>
        <li><strong><%= link_to restaurant.name, restaurant_path(restaurant) %></strong>
          <p>Type of food: <em><%= restaurant.category %></em></p>
          <p><%= restaurant.address %></p>
          <p>Phone number: <%= restaurant.phone_number %></p>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

